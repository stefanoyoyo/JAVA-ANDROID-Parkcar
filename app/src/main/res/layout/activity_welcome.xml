<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ste.parkcar.Welcome">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:text="@string/StringaBenvenuto"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:textColor="#0015ff" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scopoApp"
        android:id="@+id/textView2"
        android:textStyle="bold|italic"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tracciaPosti"
        android:id="@+id/textView3"
        android:textStyle="bold|italic"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/allarmeParco"
        android:id="@+id/textView4"
        android:textStyle="bold|italic"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/consumoCarburante"
        android:id="@+id/oilConsume"
        android:textStyle="bold|italic"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/p8"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guida"
                android:id="@+id/button2" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



